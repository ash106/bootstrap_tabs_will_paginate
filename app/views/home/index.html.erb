

<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h1>Dogs and People</h1>

      <div>
        <!-- Nav tabs -->
        <ul class="nav nav-tabs" role="tablist">
          <li role="presentation" class="<%= show_tab(@tab, 'users') || show_tab(@tab, nil) %>"><a href="#users" aria-controls="users" role="tab" data-toggle="tab">Users</a></li>
          <li role="presentation" class="<%= show_tab(@tab, 'dogs') %>"><a href="#dogs" aria-controls="dogs" role="tab" data-toggle="tab">Dogs</a></li>
        </ul>

        <!-- Tab panes -->
        <div class="tab-content">
          <div role="tabpanel" class="tab-pane <%= show_tab(@tab, 'users') || show_tab(@tab, nil) %>" id="users">
            <%= will_paginate @users, param_name: 'user_page', params: { tab: 'users' }, class: 'pagination-lg' %>

            <table class="table">
              <thead>
                <tr>
                  <th>Name</th>
                  <th>Address</th>
                  <th colspan="3"></th>
                </tr>
              </thead>

              <tbody>
                <% @users.each do |user| %>
                  <tr>
                    <td><%= user.name %></td>
                    <td><%= user.address %></td>
                    <td><%= link_to 'Show', user %></td>
                    <td><%= link_to 'Edit', edit_user_path(user) %></td>
                    <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>

          <div role="tabpanel" class="tab-pane <%= show_tab(@tab, 'dogs') %>" id="dogs">
            <%= will_paginate @dogs, param_name: 'dog_page', params: { tab: 'dogs' }, class: 'pagination-lg' %>

            <table class="table">
              <thead>
                <tr>
                  <th>Name</th>
                  <th>Breed</th>
                  <th colspan="3"></th>
                </tr>
              </thead>

              <tbody>
                <% @dogs.each do |dog| %>
                  <tr>
                    <td><%= dog.name %></td>
                    <td><%= dog.breed %></td>
                    <td><%= link_to 'Show', dog %></td>
                    <td><%= link_to 'Edit', edit_dog_path(dog) %></td>
                    <td><%= link_to 'Destroy', dog, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
